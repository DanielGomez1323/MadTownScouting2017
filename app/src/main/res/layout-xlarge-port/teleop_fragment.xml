<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.pollo.madtownscouting2017.TeleopPeriod">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gears Picked Up:"
            android:id="@+id/gearsPickedUpTextView"
            android:textSize="35sp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/teleopPeriodTextView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Teleoperated Period"
            android:id="@+id/teleopPeriodTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="47sp"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="-"
            android:id="@+id/decreaseGearsPickedUpButton"
            android:layout_below="@+id/gearsPickedUpTextView"
            android:layout_toLeftOf="@+id/gearsPickedUpTextView"
            android:layout_toStartOf="@+id/gearsPickedUpTextView"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="+"
            android:id="@+id/increaseGearsPickedUpButton"
            android:paddingTop="20dp"
            android:layout_alignTop="@+id/decreaseGearsPickedUpButton"
            android:layout_toRightOf="@+id/gearsPickedUpTextView"
            android:layout_toEndOf="@+id/gearsPickedUpTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/amountGearsPickedUpTextView"
            android:textSize="30sp"
            android:layout_alignBottom="@+id/increaseGearsPickedUpButton"
            android:layout_alignLeft="@+id/amountGearsDroppedTextView"
            android:layout_alignStart="@+id/amountGearsDroppedTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gears Dropped:"
            android:id="@+id/gearsDroppedTextView"
            android:layout_below="@+id/amountGearsPickedUpTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="35sp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="-"
            android:id="@+id/decreaseGearsDroppedButton"
            android:layout_below="@+id/gearsDroppedTextView"
            android:layout_alignRight="@+id/decreaseGearsPickedUpButton"
            android:layout_alignEnd="@+id/decreaseGearsPickedUpButton"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="+"
            android:id="@+id/increaseGearsDroppedButton"
            android:layout_below="@+id/gearsDroppedTextView"
            android:layout_alignLeft="@+id/increaseGearsPickedUpButton"
            android:layout_alignStart="@+id/increaseGearsPickedUpButton"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/amountGearsDroppedTextView"
            android:layout_alignBottom="@+id/increaseGearsDroppedButton"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Gears Dropped(Human):"
            android:id="@+id/gearsDroppedHumanTextView"
            android:layout_below="@+id/amountGearsDroppedTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="35sp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="-"
            android:id="@+id/decreaseGearsDroppedHumanButton"
            android:layout_below="@+id/gearsDroppedHumanTextView"
            android:layout_alignRight="@+id/decreaseGearsDroppedButton"
            android:layout_alignEnd="@+id/decreaseGearsDroppedButton"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="0"
            android:id="@+id/amountGearsDroppedHumanTextView"
            android:layout_alignBottom="@+id/decreaseGearsDroppedHumanButton"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="+"
            android:id="@+id/increaseGearsDroppedHumanButton"
            android:paddingTop="20dp"
            android:layout_alignBottom="@+id/amountGearsDroppedHumanTextView"
            android:layout_alignLeft="@+id/increaseGearsDroppedButton"
            android:layout_alignStart="@+id/increaseGearsDroppedButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gears Placed:"
            android:id="@+id/gearsPlacedTextView"
            android:layout_below="@+id/amountGearsDroppedHumanTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="35sp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="-"
            android:id="@+id/decreaseGearsPlacedButton"
            android:paddingTop="20dp"
            android:layout_alignBottom="@+id/amountGearsPlacedTextView"
            android:layout_toLeftOf="@+id/gearsPickedUpTextView"
            android:layout_toStartOf="@+id/gearsPickedUpTextView" />

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="+"
            android:id="@+id/increaseGearsPlacedButton"
            android:layout_below="@+id/gearsPlacedTextView"
            android:layout_alignLeft="@+id/increaseGearsDroppedButton"
            android:layout_alignStart="@+id/increaseGearsDroppedButton"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/amountGearsPlacedTextView"
            android:layout_alignBottom="@+id/increaseGearsPlacedButton"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successful Climb?"
            android:id="@+id/successfulclimbcheckBox"
            android:textSize="35sp"
            android:layout_below="@+id/amountGearsPlacedTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />

        <SeekBar
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:id="@+id/reachRopeTimeSeekBar"
            android:max="15"
            android:progress="0"
            android:indeterminate="false"
            android:minWidth="250dp"
            android:layout_below="@+id/successfulclimbcheckBox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="0"
            android:textSize="30dp"
            android:id="@+id/zeroRopeTimeReached"
            android:layout_below="@+id/reachRopeTimeSeekBar"
            android:layout_alignLeft="@+id/reachRopeTimeSeekBar"
            android:layout_alignStart="@+id/reachRopeTimeSeekBar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="Time To Reach Rope: 0"
            android:textSize="30dp"
            android:id="@+id/reachRopeTimeTextView"
            android:layout_below="@+id/reachRopeTimeSeekBar"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="15"
            android:textSize="30dp"
            android:id="@+id/fifteenReachRopeTimeTextView"
            android:layout_below="@+id/reachRopeTimeSeekBar"
            android:layout_alignRight="@+id/reachRopeTimeSeekBar"
            android:layout_alignEnd="@+id/reachRopeTimeSeekBar"/>

        <SeekBar
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:id="@+id/alignTimeSeekBar"
            android:max="10"
            android:progress="0"
            android:indeterminate="false"
            android:minWidth="250dp"
            android:layout_below="@+id/reachRopeTimeTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="0"
            android:textSize="30dp"
            android:id="@+id/zeroAlignTimeTextView"
            android:layout_below="@+id/alignTimeSeekBar"
            android:layout_alignLeft="@+id/alignTimeSeekBar"
            android:layout_alignStart="@+id/alignTimeSeekBar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="Align Time: 0"
            android:textSize="30dp"
            android:id="@+id/alignCountTextView"
            android:layout_below="@+id/alignTimeSeekBar"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="10"
            android:textSize="30dp"
            android:id="@+id/tenAlignTimeTextView"
            android:layout_below="@+id/alignTimeSeekBar"
            android:layout_alignRight="@+id/alignTimeSeekBar"
            android:layout_alignEnd="@+id/alignTimeSeekBar"/>

        <SeekBar
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:id="@+id/climbTimeSeekBar"
            android:layout_marginTop="45dp"
            android:max="20"
            android:progress="0"
            android:indeterminate="false"
            android:minWidth="250dp"
            android:layout_below="@+id/alignCountTextView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="0"
            android:id="@+id/zeroTimeTextView"
            android:textSize="30dp"
            android:layout_below="@+id/climbTimeSeekBar"
            android:layout_alignLeft="@+id/climbTimeSeekBar"
            android:layout_alignStart="@+id/climbTimeSeekBar"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="ClimbTime: 0"
            android:id="@+id/climbCountTextView"
            android:textSize="30dp"
            android:layout_below="@+id/climbTimeSeekBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="20"
            android:id="@+id/twentyTimeTextView"
            android:textSize="30dp"
            android:layout_below="@+id/climbTimeSeekBar"
            android:layout_alignRight="@+id/climbTimeSeekBar"
            android:layout_alignEnd="@+id/climbTimeSeekBar"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Alliance KPA"
            android:textSize="35dp"
            android:id="@+id/allianceKPATextView"
            android:layout_below="@id/climbCountTextView"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/allianceKPAEnterText"
            android:hint="10"
            android:layout_below="@+id/allianceKPATextView"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</ScrollView>