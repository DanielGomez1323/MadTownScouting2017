<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"

    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pollo.madtownscouting2017.StartMenu">

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/searchMenuSearchBox"
        android:layout_toLeftOf="@+id/searchButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Ex. Team 1323" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchButton"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Scout"
        android:textSize="10dp"
        android:id="@+id/scoutButton"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:layout_below="@+id/searchButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Upload"
        android:textSize="10dp"
        android:id="@+id/uploadData"
        android:drawableLeft="@android:drawable/ic_menu_upload"
        android:layout_below="@+id/scoutButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Teams"
        android:textSize="10dp"
        android:id="@+id/teamsView"
        android:drawableLeft="@drawable/ic_action_ppl"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/uploadData" />

    <Button
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Add Photo"
        android:textSize="10dp"
        android:id="@+id/addPhoto"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:layout_below="@+id/teamsView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="View Photos"
        android:textSize="10dp"
        android:id="@+id/viewPhoto"
        android:drawableLeft="@android:drawable/ic_menu_gallery"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/addPhoto" />

    <Button
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="3v3"
        android:textSize="10dp"
        android:id="@+id/threeVThree"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/scoutButton"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Team Data"
        android:textSize="10dp"
        android:id="@+id/teamData"
        android:layout_below="@+id/threeVThree"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Pick List"
        android:textSize="10dp"
        android:id="@+id/pickList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/threeVThree"
        android:layout_marginRight="10dp"/>

</RelativeLayout>
</ScrollView>