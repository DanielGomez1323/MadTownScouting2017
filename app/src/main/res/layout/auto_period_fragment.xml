<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Autonomous Period"
        android:id="@+id/autoTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baseline Crossed?"
        android:id="@+id/baselineCheckBox"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/autoTextView"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attempted to place gear?"
        android:id="@+id/gearAttemptCheckBox"
        android:layout_below="@+id/baselineCheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gear successfully placed?"
        android:id="@+id/gearSuccessCheckBox"
        android:layout_below="@+id/gearAttemptCheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High goal?"
        android:id="@+id/highCheckBox"
        android:layout_marginTop="33dp"
        android:checked="false"
        android:layout_below="@+id/gearSuccessCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low goal?"
        android:id="@+id/lowCheckBox"
        android:layout_alignTop="@+id/highCheckBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoBallsSeekBar"
        android:layout_below="@+id/lowCheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:max="10"
        android:progress="0"
        android:indeterminate="false"
        android:minWidth="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/zeroTextView"
        android:layout_below="@+id/autoBallsSeekBar"
        android:layout_alignLeft="@+id/autoBallsSeekBar"
        android:layout_alignStart="@+id/autoBallsSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10"
        android:id="@+id/tenTextView"
        android:layout_alignBottom="@+id/zeroTextView"
        android:layout_toRightOf="@+id/zeroTextView"
        android:layout_marginLeft="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balls Made: 0"
        android:id="@+id/ballCountTextView"
        android:layout_below="@+id/autoBallsSeekBar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>